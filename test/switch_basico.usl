public static void main() {
    int dia = 3;
    switch (dia) {
        case 1:
            System.out.println("Lunes");
            break;
        case 2:
            System.out.println("Martes");
            break;
        case 3:
            System.out.println("Miércoles");
            break;
        default:
            System.out.println("Otro día");
    }

    String s = "b";
    switch (s) {
        case "a":
            System.out.println("uno");
            break;
        case "b":
            System.out.println("dos");
            break;
        default:
            System.out.println("tres");
    }
}
