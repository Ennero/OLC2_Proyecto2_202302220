    public static void main() {
        int altura = 5;

        // Figura 1: Triángulo rectángulo
        System.out.println("Figura 1: Triángulo rectángulo");
        for (int i = 1; i <= altura; i++) {
            String fila = "";
            for (int j = 1; j <= i; j++) {
                fila = fila + "*";
            }
            System.out.println(fila);
        }

        // Figura 2: Pirámide centrada
        System.out.println("Figura 2: Pirámide centrada");
        for (int i = 1; i <= altura; i++) {
            String fila = "";

            // Espacios
            for (int e = 1; e <= (altura - i); e++) {
                fila = fila + " ";
            }

            // Estrellas
            for (int k = 1; k <= (2 * i - 1); k++) {
                fila = fila + "*";
            }

            System.out.println(fila);
        }

        // Figura 3: Cuadro con forEach
        System.out.println("Figura 3: Cuadro");
        String[] lineas = { "*****", "*****", "*****" };
        for (String linea : lineas) {
            System.out.println(linea);
        }
    }