void burbuja(int[] arr, int n) {
    if (n <= 1) {
        return;
    }
    
    for (int i = 0; i < n - 1; i++) {
        if (arr[i] > arr[i + 1]) {
            int temp = arr[i];
            arr[i] = arr[i + 1];
            arr[i + 1] = temp;
        }
    }
    
    // Llamada recursiva
    burbuja(arr, n - 1);
}

public static void main(String[] args) {
    int[] numeros = { 5, 1, 4, 2, 8 };

    System.out.println("Antes: [");
    for (int i = 0; i < numeros.length; i++) {
        System.out.println(numeros[i]);
        if (i < numeros.length - 1) {
            System.out.println(", ");
        }
    }
    System.out.println("]");

    burbuja(numeros, numeros.length);

    System.out.println("DespuÃ©s: [");
    for (int i = 0; i < numeros.length; i++) {
        System.out.println(numeros[i]);
        if (i < numeros.length - 1) {
            System.out.println(", ");
        }
    }
    System.out.println("]");
}