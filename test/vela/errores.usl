public static void main() {
    System.out.println("=== Prueba de errores mixtos ===");
    
    // ERRORES LÉXICOS
    int numero@ = 5;  // Caracter inválido
    String texto# = "hola";  // Símbolo no reconocido
    
    // ERRORES SINTÁCTICOS
    int suma = 5 +   // Expresión incompleta
    
    if (numero > 0 {  // Paréntesis no cerrado
        System.out.println("Positivo");
    
    // ERRORES SEMÁNTICOS
    int division = 15 / 0;  // División por cero
    System.out.println(variableInexistente);  // Variable no declarada
    
    // Variable declarada dos veces
    double precio = 10.50;
    double precio = 15.75;
    
    // Break fuera de contexto
    break;
    
    // Tipo incompatible
    boolean estado = "verdadero";
    
    // Array con índice inválido
    int[] lista = {1, 2, 3};
    int elemento = lista[3.14];  // Índice no entero
    
    // Operación inválida entre tipos
    String mensaje = "Número: ";
    int resultado = mensaje * 5;
    
    // Constante modificada
    final String SALUDO = "Hola";
    SALUDO = "Adiós";
    
    System.out.println("Fin del programa con errores");
}

