5. Archivo para probar errores específicos en estructuras de control

public static void main() {
    System.out.println("=== Errores en estructuras de control ===");
    
    // Error: break fuera de ciclo o switch
    if (true) {
        break;  // Error semántico
    }
    
    // Error: continue fuera de ciclo
    continue;  // Error semántico
    
    // Error sintáctico en for
    for (int i = 0; i < 5; i+) {  // Incremento mal formado
        System.out.println(i);
    }
    
    // Error sintáctico en while
    while numero > 0) {  // Falta paréntesis de apertura
        numero = numero - 1;
    }
    
    // Error en switch: case duplicado
    int opcion = 1;
    switch (opcion) {
        case 1:
            System.out.println("Uno");
            break;
        case 1:  // Error semántico: caso duplicado
            System.out.println("Uno de nuevo");
            break;
        default:
            System.out.println("Otro");
    }
    
    // Error: variable de control no declarada
    for (j = 0; j < 10; j++) {  // j no está declarada
        System.out.println(j);
    }
    
    // Error: condición no booleana en if
    int valor = 5;
    if (valor) {  // Error semántico: valor no es boolean
        System.out.println("Verdadero");
    }
    
    // Error: array en switch (si no está permitido)
    int[] numeros = {1, 2, 3};
    switch (numeros) {  // Error semántico
        case {1, 2, 3}:
            System.out.println("Array");
            break;
    }
}