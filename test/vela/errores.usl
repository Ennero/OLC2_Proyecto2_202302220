3. Archivo para errores semánticos

public static void main() {
    // Error semántico: Variable no declarada
    System.out.println(variableNoDeclarada);
    
    // Error semántico: División por cero
    int resultado = 10 / 0;
    
    // Error semántico: Variable declarada dos veces
    int numero = 5;
    int numero = 10;
    
    // Error semántico: Uso de variable antes de declararla
    suma = numero + 5;
    int suma;
    
    // Error semántico: Tipo incompatible en asignación
    String texto = 123;
    
    // Error semántico: Operación inválida entre tipos
    String mensaje = "Hola";
    int longitud = mensaje + 5;
    
    // Error semántico: Break fuera de ciclo
    break;
    
    // Error semántico: Continue fuera de ciclo
    continue;
    
    // Error semántico: Return en main (si no está permitido)
    return 10;
    
    // Error semántico: Acceso a array con índice no entero
    int[] numeros = {1, 2, 3, 4, 5};
    int valor = numeros["texto"];
    
    // Error semántico: Variable constante modificada
    final int CONSTANTE = 10;
    CONSTANTE = 20;
    
    // Error semántico: Uso de variable no inicializada
    int sinInicializar;
    int otro = sinInicializar + 5;
}

