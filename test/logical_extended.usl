boolean logAndReturn(String label, boolean value) {
    System.out.println(label);
    return value;
}

public static void main() {
    int uno = 1;
    int cero = 0;
    double medio = 0.5;
    double ceroDouble = 0.0;
    float floatUno = 2.0f;
    float floatCero = 0.0f;
    String texto = "hola";
    String vacio = "";
    String nulo = null;

    System.out.println("uno && true -> " + (uno && true));
    System.out.println("cero || true -> " + (cero || true));
    System.out.println("uno || cero -> " + (uno || cero));
    System.out.println("cero && uno -> " + (cero && uno));
    System.out.println("!cero -> " + (!cero));
    System.out.println("!uno -> " + (!uno));
    System.out.println("!ceroDouble -> " + (!ceroDouble));
    System.out.println("!medio -> " + (!medio));
    System.out.println("!floatCero -> " + (!floatCero));
    System.out.println("!floatUno -> " + (!floatUno));
    System.out.println("texto && true -> " + (texto && true));
    System.out.println("vacio || uno -> " + (vacio || uno));
    System.out.println("nulo || texto -> " + (nulo || texto));
    System.out.println("!nulo -> " + (!nulo));
    System.out.println("short && -> " + (false && logAndReturn("NO_AND_TRIGGER", true)));
    System.out.println("short || -> " + (true || logAndReturn("NO_OR_TRIGGER", false)));
}
