public static void main(String[] args) {

    // ======================================================
    // PRUEBA 1: Integer.parseInt
    // ======================================================
    System.out.println("--- Pruebas de Integer.parseInt ---");

    // Caso básico
    int numero1 = Integer.parseInt("250");
    System.out.println(numero1); // Esperado: 250

    // Uso en una expresión
    int resultado = 100 + Integer.parseInt("-50");
    System.out.println(resultado); // Esperado: 50

    // Parseo desde una variable de tipo String
    String textoNumero = "1024";
    int numeroParseado = Integer.parseInt(textoNumero);
    System.out.println(numeroParseado * 2); // Esperado: 2048


    // ======================================================
    // PRUEBA 2: Float.parseFloat
    // ======================================================
    System.out.println("\n--- Pruebas de Float.parseFloat ---");

    // Caso básico con decimales
    float flotante1 = Float.parseFloat("123.456");
    System.out.println(flotante1); // Esperado: 123.456

    // Uso en una expresión
    float resultadoFloat = 0.5f + Float.parseFloat("99.5");
    System.out.println(resultadoFloat); // Esperado: 100.0


